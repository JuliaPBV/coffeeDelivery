{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "types": ["nativewind/types"],
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@src/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@screens/*": ["./src/screens/*"],
      "@assets/*": ["./src/assets/*"],
      "@hooks/*": ["./src/hooks/*"]
    }
  },
  "include": ["src/**/*", "src/@types/**/*"]
}
